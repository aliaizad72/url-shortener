<div class="flex justify-center p-4">
  <div class="flex justify-between items-center w-full md:w-[768px]">
    <h1 class="text-4xl font-bold text-vanilla hover:underline"><%= link_to "snippit", home_path %></h1>
    <div class="flex gap-4">
      <%= link_to "shortener", home_path, class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium" %>
      <% if current_user %>
        <%= button_to "log out", destroy_user_session_path, method: :delete, class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium" %>
      <% end %>
    </div>
  </div>
</div>

<h1 class="text-3xl font-medium m-4 md:w-[768px] md:mx-auto text-vanilla"><%= @urls.length %> urls</h1>

<% @urls.each do |url| %>
  <div class="m-2 md:mx-auto p-4 md:w-[768px] rounded-md text-cream  border border-cream shadow-md shadow-grey-200" data-controller="urlclipboard">
    <h5 class="truncate font-medium text-cream hover:underline" ><%= link_to "#{url.title}", url.target, target: "_blank" %></h5>
    <div class="flex items-center gap-2" >
      <a href="http://127.0.0.1:3000/<%= url.short %>" target="_blank" class="font-medium text-vanilla hover:underline" data-urlclipboard-target="link">snippit.my/<%= url.short %></a>
      <div data-action="click->urlclipboard#copy">
        <svg class="w-4 mb-[1.5px] text-cream fill-current hover:text-vanilla cursor-pointer" viewBox="0 0 24 24"><path d="M19 21H8V7h11m0-2H8a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2m-3-4H4a2 2 0 0 0-2 2v14h2V3h12V1Z"/></svg>
      </div>
      <%= link_to url_path(url), target: "_blank" do %>
        <svg class="w-4 mb-[1.5px] text-cream fill-current hover:text-vanilla cursor-pointer" viewBox="0 0 24 24"><path d="M3,22V8H7V22H3M10,22V2H14V22H10M17,22V14H21V22H17Z" /></svg>
      <% end %>
    </div>
    <div class="hidden" data-urlclipboard-target="notify">
      link copied!
    </div>
  </div>
<% end %>


