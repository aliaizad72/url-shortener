<%= form_with model: url, class: "flex w-full gap-2 justify-center py-2 px-6 md:w-[768px]" do |form| %>
    <%= form.url_field :target, required: true, class: "flex-1 bg-gray-100 rounded-lg border-transparent focus:border-transparent focus:ring-0 autofill:bg-transparent", placeholder: "https://very-long-link.com" %>
    <%= form.submit value: "shorten url", class: "p-2 rounded-lg cursor-pointer font-medium text-base bg-darkslategrey text-vanilla border border-vanilla transition hover:bg-vanilla hover:text-darkslategrey" %>
<% end %>
