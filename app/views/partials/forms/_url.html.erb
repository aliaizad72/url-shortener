<%= form_with model: url, class: "flex w-full gap-2 justify-center py-2 px-6 md:w-[768px]" do |form| %>
    <%= form.url_field :target, required: true, class: "flex-1", placeholder: "https://very-long-link.com" %>
    <%= form.submit value: "shorten url", class: "bg-blue-500 text-white p-2 border border-blue-600 hover:bg-white hover:text-blue-500 cursor-pointer" %>
<% end %>
