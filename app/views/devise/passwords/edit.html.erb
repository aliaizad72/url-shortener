<div class="flex justify-center items-center min-h-[95%]">
  <div class="flex flex-col justify-center items-center rounded-md">
    <%= render 'partials/navbar' %>

    <% if alert || resource.errors.any? %>
      <div class="bg-hunyadi w-full py-2 px-3 rounded-lg text-sm text-auburn font-medium alert my-2">
        <%= alert %>
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="field my-4">
        <%= f.password_field :password, autocomplete: "current-password", class: "rounded-lg border-transparent focus:border-transparent focus:ring-0", placeholder: "new password (min 6 chararters)", required: true, minlength: 6 %>
      </div>
      <div class="field my-4">
        <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "rounded-lg border-transparent focus:border-transparent focus:ring-0", placeholder: "confirm password", required: true, minlength: 6 %>
      </div>

      <div class="actions">
        <%= f.submit "set new password", class: " p-2 rounded-lg cursor-pointer font-medium text-base bg-darkslategrey text-vanilla border border-vanilla transition hover:bg-vanilla hover:text-darkslategrey w-full" %>
      </div>
      <div class="flex flex-col gap-2 mt-2">
        <%= link_to "log in", new_user_session_path, class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium" %>
        <%= link_to "sign up", new_user_registration_path, class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium" %>
      </div>
    <% end %>
  </div>
</div>