<div class="flex justify-center items-center min-h-[85%]">
  <div class="flex flex-col justify-center items-center rounded-md">
    <%= render 'partials/navbar' %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field my-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-lg border-transparent focus:border-transparent focus:ring-0", placeholder: "email"%>
      </div>

      <div class="field my-4">
        <%= f.password_field :password, autocomplete: "current-password", class: "rounded-lg border-transparent focus:border-transparent focus:ring-0", placeholder: "password (6 characters minimum)"%>
      </div>

      <div class="field my-4">
        <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "rounded-lg border-transparent focus:border-transparent focus:ring-0", placeholder: "confirm password"%>
      </div>

      <div class="actions">
        <%= f.submit "sign up", class: "p-2 rounded-lg cursor-pointer font-medium text-base bg-darkslategrey text-vanilla border border-vanilla transition hover:bg-vanilla hover:text-darkslategrey w-full"%>
      </div>

      <div class="flex flex-col gap-2 mt-2">
        <%= link_to "log in", new_user_session_path, class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium" %>
      </div>
    <% end %>
  </div>
</div>
