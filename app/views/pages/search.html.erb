<div class="flex flex-col justify-center items-center min-h-[80%] text-xl gap-2">
  <%= render 'partials/navbar' %>
  <%= render 'partials/alert', message: "" %>
  <%= form_with url: "/analytics", method: :get, class: "flex w-full gap-2 justify-center py-2 px-6 md:w-[768px]" do |form| %>
    <%= form.url_field :short, required: true, class: "flex-1 bg-gray-100 rounded-lg border-transparent focus:border-transparent focus:ring-0 autofill:bg-transparent", placeholder: "https://snippit.my/t______" %>
    <%= form.submit value: "get analytics", class: "p-2 rounded-lg cursor-pointer font-medium text-base bg-darkslategrey text-vanilla border border-vanilla transition hover:bg-vanilla hover:text-darkslategrey" %>
  <% end %>
  <%= link_to "shortener", home_path, class: "text-cream hover:text-vanilla cursor-pointer hover:underline font-medium" %>
</div>
