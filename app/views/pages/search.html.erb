<div class="flex flex-col justify-center items-center min-h-[80%] text-xl gap-2">
  <%= render 'partials/navbar' %>
  <%= render 'partials/alert', message: "" %>
  <%= form_with url: "/analytics", method: :get, class: "flex w-full gap-2 justify-center py-2 px-6 md:w-[768px]" do |form| %>
    <%= form.url_field :short, required: true, class: "flex-1", placeholder: "https://snippit.my/t______" %>
    <%= form.submit value: "get analytics", class: "bg-blue-500 text-white p-2 border border-blue-600 hover:bg-white hover:text-blue-500 cursor-pointer" %>
  <% end %>
  <%= link_to "short a new url", home_path, class: "text-gray-400 hover:text-blue-500 cursor-pointer hover:underline" %>
</div>
