<div class="flex flex-col justify-center items-center min-h-[92%] text-xl gap-3" data-controller="notice">
  <%= render 'partials/navbar' %>
  <%= render "partials/forms/url", url: @new_url %>
  <%= render "partials/alert" %>
  <div class="flex gap-4 justify-between items-center" data-controller="clipboard">
    <div class="flex-1 text-cream">
      <span data-clipboard-target="notice">shortened link: </span>
      <a href="<%= redirect_url_path(@url.short) %>" target="_blank" class="text-vanilla font-medium hover:underline" data-clipboard-target="url">snippit.my/<%= @url.short %></a>
    </div>
    <div data-action="click->clipboard#copy">
      <svg class="w-5 text-cream fill-current hover:text-vanilla cursor-pointer" viewBox="0 0 24 24"><path d="M19 21H8V7h11m0-2H8a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2m-3-4H4a2 2 0 0 0-2 2v14h2V3h12V1Z"  /></svg>
    </div>
  </div>
  <div class="flex gap-4 justify-between items-center" data-controller="clipboard">
    <div class="flex-1 text-cream">
      <span data-clipboard-target="notice">link analytics: </span>
      <a href="<%= url_visits_path(@url) %>" target="_blank" class="text-vanilla font-medium hover:underline" data-clipboard-target="url">snippit.my<%= url_visits_path(@url) %></a>
    </div>
    <div data-action="click->clipboard#copy">
      <svg class="w-5 text-cream fill-current hover:text-vanilla cursor-pointer" viewBox="0 0 24 24"><path d="M19 21H8V7h11m0-2H8a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2m-3-4H4a2 2 0 0 0-2 2v14h2V3h12V1Z"  /></svg>
    </div>
  </div>

  <div class="flex gap-5">
    <% if current_user %>
      <%= link_to "your links", user_path(current_user), class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium" %>
    <% end %>
    <%= link_to "analytics", visits_search_path, class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium" %>
    <% if current_user %>
      <%= button_to "log out", destroy_user_session_path, method: :delete, class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium" %>
    <% else %>
      <%= link_to "log in", new_user_session_path, class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium", data: { action: "mouseover->notice#reveal" } %>
      <%= link_to "sign up", new_user_registration_path, class: "text-cream cursor-pointer hover:underline hover:text-vanilla font-medium", data: { action: "mouseover->notice#reveal" } %>
    <% end %>
  </div>
</div>